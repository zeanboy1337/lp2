<?php
// Load phpseclib (jika pakai Composer)
require __DIR__ . '/vendor/autoload.php';

// Atau kalau manual:
// require_once 'phpseclib3/Net/SFTP.php';

use phpseclib3\Net\SFTP;

$host = 'your.sftp.server.com'; // ganti IP/Domain server
$port = 22;
$username = 'your_sftp_user';
$password = 'your_sftp_password';

// File lokal & remote
$localFile = 'localfile.txt';
$remoteFile = '/home/your_sftp_user/remote_uploaded_file.txt';

// Buat koneksi SFTP
$sftp = new SFTP($host, $port);

if (!$sftp->login($username, $password)) {
    exit('Login failed');
}

// Upload file
if (!$sftp->put($remoteFile, file_get_contents($localFile))) {
    exit('Upload failed');
}

echo "âœ… Upload berhasil ke SFTP!";
